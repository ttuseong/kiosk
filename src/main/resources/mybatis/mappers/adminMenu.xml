<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminMenu">
	<!-- 드롭다운 - 카테고리 리스트 불러오기 -->
	<select id="getCateList" parameterType="int" resultType="com.javaex.vo.CategoryVo">
		<![CDATA[
			select  storeno,
			        categoryno,
			        categoryname
			from category
			where storeno = #{storeNo}
		]]>
	</select>
	
	<!-- 드롭다운 - 메뉴 리스트 불러오기 -->
	<select id="getMenuList" parameterType="int" resultType="com.javaex.vo.MenuVo">
		<![CDATA[
			select  menuno,
			        categoryno,
			        menuname,
			        menudesc,
			        menuprice,
			        menuimg,
			        isspecial,
			        ischange,
			        isset
			from menu
			where categoryno =  #{categoryNo}
		]]>
	</select>

	<!-- 메뉴 정보 불러오기 -->
	<select id="getMenuInfo" parameterType="int" resultType="com.javaex.vo.MenuVo">
		<![CDATA[
			select  menuno,
			        categoryno,
			        menuname,
			        menudesc,
			        menuprice,
			        menuimg,
			        isspecial,
			        ischange,
			        isset
			from menu
			where menuno = #{menuNo}
		]]>
	</select>
	
	<delete id="delMenu" parameterType="int">
		<![CDATA[
			delete from menu
			where menuNo = #{menuNo}
		]]>
	</delete>
</mapper>